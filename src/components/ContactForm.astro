---
// Contact Form Component - Quick contact form for every page
---

<section id="contact" class="border-t border-gray-200 rounded-md">
	<div class="max-w-screen-xl mx-auto px-6 md:px-8 py-16 md:py-24">
		<div class="relative shadow-2xl rounded-md">
			<div class="grid grid-cols-1 md:grid-cols-3">
				<!-- Contact Info Column -->
				<div class="relative bg-blue-500 px-6 py-10 md:p-12 rounded-md overflow-hidden">
					<h3 class="text-lg font-medium text-white leading-7">
						Contact information
					</h3>
					<p class="text-indigo-50 max-w-screen-md mt-6">
						Thank you for considering us for your roofing needs. We will get back
						to you during normal business hours.
					</p>
					
					<dl class="mt-8 space-y-6">
						<dd class="flex text-white">
							<svg class="w-5 h-5 mr-3 mt-1" fill="currentColor" viewBox="0 0 20 20">
								<path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
							</svg>
							<a href="tel:913-268-6052" class="block hover:text-indigo-200 transition-colors">
								(913) 268-6052
							</a>
						</dd>
						<dd class="flex text-white">
							<svg class="w-5 h-5 mr-3 mt-1" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
							</svg>
							<span class="block">
								Serving Kansas City Metro Area
							</span>
						</dd>
						<dd class="flex text-white">
							<svg class="w-5 h-5 mr-3 mt-1" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
							</svg>
							<span class="block">
								24/7 Emergency Service
							</span>
						</dd>
					</dl>
				</div>
				
				<!-- Form Column -->
				<div class="col-span-2 px-6 py-10 md:p-12">
					<h3 class="text-lg font-medium text-gray-900 leading-7">
						Send us a message
					</h3>
					
					<form action="/contact" method="POST" class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8 mt-6">
						<div>
							<label class="block text-sm font-medium text-gray-900 leading-5">
								First name
							</label>
							<div class="mt-1">
								<input 
									type="text" 
									name="first-name" 
									required
									class="block w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-md shadow-sm"
								/>
							</div>
						</div>
						
						<div>
							<label class="block text-sm font-medium text-gray-900 leading-5">
								Last name
							</label>
							<div class="mt-1">
								<input 
									type="text" 
									name="last-name" 
									required
									class="block w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-md shadow-sm"
								/>
							</div>
						</div>
						
						<div>
							<label class="block text-sm font-medium text-gray-900 leading-5">
								Email
							</label>
							<div class="mt-1">
								<input 
									type="email" 
									name="email" 
									class="block w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-md shadow-sm"
								/>
							</div>
						</div>
						
						<div>
							<label class="block text-sm font-medium text-gray-900 leading-5">
								Phone
							</label>
							<div class="mt-1">
								<input 
									type="tel" 
									name="phone" 
									required
									class="block w-full px-4 py-3 text-gray-900 border border-gray-300 rounded-md shadow-sm"
								/>
							</div>
						</div>
						
						<div class="col-span-1 md:col-span-2">
							<div class="flex justify-between">
								<label class="block text-sm font-medium text-gray-900 leading-5">
									Message
								</label>
								<span class="block text-sm text-gray-500 leading-5">
									Max. 500 characters
								</span>
							</div>
							<div class="mt-1">
								<textarea 
									name="message" 
									class="block w-full px-4 py-3 text-gray-900 border-gray-300 rounded-md shadow-sm resize-y"
									rows="4"
									placeholder="Describe your roofing needs, any damage, or questions..."
								></textarea>
							</div>
						</div>
						
						<div class="col-span-1 md:col-span-2 flex flex-col justify-end">
							<button 
								type="submit" 
								class="flex items-center justify-center w-full md:w-auto bg-blue-500 text-white font-medium px-6 py-3 rounded-md border border-transparent shadow-sm hover:bg-blue-600 transition-colors mt-2"
							>
								Submit
							</button>
							<span class="block text-xs text-gray-500 leading-4 text-center mt-6">
								By pressing 'Submit' you are explicitly agreeing to receive text messages. To unsubscribe, text
								STOP to (913) 268-6052.
							</span>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>